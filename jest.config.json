{
  "testEnvironment": "jsdom",
  "testMatch": ["**/__tests__/**/*.test.js", "**/?(*.)+(spec|test).js"],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "transform": {},
  "extensionsToTreatAsEsm": []
}